---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';


import CertificationPreview from '../components/CertificationPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const certifications = (await getCollection('certifications')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
	title="Mes certifications| NDIAYE Alhousseyni"
	description="Learn about Jeanine White's most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Mes certifications"
				tagline="Consultez mes certifications les plus récentes ci-dessous pour avoir une idée de mon expérience passée."
				align="start"
			/>
			<Grid variant="offset">
				{
					certifications.map((certifications) => (
						<li>
							<CertificationPreview certifications={certifications} />
						</li>
					))
				}
			</Grid>
		</main>
	</div>
</BaseLayout>
